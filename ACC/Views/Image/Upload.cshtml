@{
    ViewBag.Title = "Upload and View Image";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h3>Upload Image and View</h3>
    <form id="imageUploadForm" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <input type="file" name="file" accept="image/*" class="form-control" required />
            <button type="submit" class="btn btn-success">Upload</button>
        </div>
    </form>

    <!-- Bootstrap Modal for Image Preview -->
    <div class="modal fade" id="imageModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Image Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="imageViewer" src="" alt="Uploaded Image" class="img-fluid rounded shadow" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const form = document.getElementById('imageUploadForm');
    const modal = new bootstrap.Modal(document.getElementById('imageModal'));

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const res = await fetch('/Image/Upload', {
            method: 'POST',
            body: formData
        });

        const data = await res.json();
        if (res.ok && data.filename) {
            document.getElementById('imageViewer').src = `/images/${data.filename}`;
            modal.show();
        } else {
            alert("Upload failed.");
        }
    });
</script>
