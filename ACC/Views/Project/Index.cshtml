@using ACC.ViewModels.ProjectVMs
@using Helpers;

@model List<DisplayProjectsVM>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="@ViewData["CSRFToken"]">
    <title>Projects</title>
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
 

    <style>
        .form-control {
            border: 1px solid #ccc;
            height: 40px;
            width: 300px;
        }

        .header-div {
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .nav-links {
            border-bottom: 1px solid rgb(220, 220, 220);
        }

            .nav-links a {
                margin-right: 20px;
                color: #666;
                text-decoration: none;
            }

                .nav-links a.active {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                }

        .table-container {
            width: 100%;
            overflow-x: auto;
        }

        .table {
            width: 100%;
            min-width: 800px;
            table-layout: auto;
            cursor: pointer;
            color: rgb(91, 115, 157);
        }

            .table th,
            .table td {
                white-space: nowrap;
                padding: 12px 40px;
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                color: #333;
                font-weight: bold;
            }

            .table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .action-column {
            position: relative;
        }

            .action-column .dropdown-toggle {
                background: none;
                border: none;
                color: #666;
                cursor: pointer;
            }

                .action-column .dropdown-toggle:hover {
                    color: #007bff;
                }

        .action-menu {
            position: absolute;
            z-index: 1000;
            right: 0;
            top: 100%;
            min-width: 120px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item {
            padding: 8px 12px;
            color: #333;
            text-decoration: none;
            display: block;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        .search-container {
            position: relative;
            display: inline-block;
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="container-fluid p-4">
            <div class="header-div">
                <h2>Projects</h2>
            </div>

            <div class="nav-links mb-3">
                <a href="#" class="active">Active</a>
                <a href="#">Archived</a>
            </div>

            <div class="d-flex justify-content-between button-group mb-3">
                <div>
                    <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#addProjectModal">+ Create Project</button>
                    <i class="fas fa-info-circle" style="color: #666;"></i>
                </div>

                <form action="/Project/Index" method="get" class="d-flex">
                    <div class="search-container">
                        <input type="text" class="form-control" name="srchText" placeholder="Search" value="@Context.Request.Query["srchText"]" />
                    </div>
                    <button type="submit" class="btn btn-primary ms-2">Search</button>
                </form>
            </div>

            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="text-align:left;">Name</th>
                            <th style="text-align:left;">Number</th>
                            <th style="text-align:left;">Project Type</th>
                            <th>Project Value</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Creation Date</th>
                            <th class="action-column">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center">No projects found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:left;">@item.Name</td>
                                    <td style="text-align:left;">@item.ProjectNumber</td>
                                    <td style="text-align:left;">@EnumHelper.GetDescription(item.ProjectType)</td>
                                    <td>@item.ProjectValue?.ToString("N2")</td>
                                    <td>@item.StartDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@item.EndDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@item.CreationDate?.ToString("MM/dd/yyyy")</td>
                                    <td >
                                        <div class="dropdown">
                                            <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="dropdownMenuButton_@item.id" data-bs-toggle="dropdown" aria-expanded="false">
                                                &#x22EE; <!-- Unicode for three vertical dots -->
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton_@item.id">
                                                <li><a class="dropdown-item edite-project" data-id="@item.id" href="#">Edite project</a></li>
                                                <li><a class="dropdown-item text-danger delete-project" data-id="@item.id" href="#">Delete project</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="pagination mt-3 d-flex justify-content-center gap-2">
                @for (int i = 1; i <= (ViewBag.totalPages ?? 1); i++)
                {
                    <a href="@Url.Action("Index", new { page = i, srchText = Context.Request.Query["srchText"] })"
                       class="btn @(i == (ViewBag.CurrentPage ?? 1) ? "btn-primary" : "btn-light")">
                        @i
                    </a>
                }
            </div>

            <partial name="PartialViews/_AddProjectPartialView" model="new AddProjectVM()" />
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on("submit", "#addProjectForm", function (event) {
                event.preventDefault();

                $.ajax({
                    url: "/Member/AddProject",
                    type: "POST",
                    data: $(this).serialize(),
                    success: function (response) {
                        if (!response.success) {
                            $("#addProjectModal .modal-body").html($(response).find(".modal-body").html());
                        } else {
                            console.log("ok");
                            $("#addProjectModal").modal("hide");

                            setTimeout(function () {
                                location.reload();
                            }, 500);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", error);
                        alert("Something went wrong!");
                    }
                });
            });

                    $(document).on("click", ".delete-project", function (e) {
            e.preventDefault();
            var projectId = $(this).data("id");

            if (confirm("Are you sure you want to delete this project?")) {
                $.ajax({
                    url: "/Project/Delete/" + projectId,
                    type: "POST",  // Change from GET to POST
                    success: function () {
                        location.reload();  // Refresh the page after deletion
                    },
                    error: function () {
                        alert("Error deleting project.");
                    }
                });
            }
        });

        });
    </script>

    
</body>
</html>