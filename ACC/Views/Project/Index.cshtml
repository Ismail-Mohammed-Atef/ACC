@using ACC.ViewModels.MemberVM
@using ACC.ViewModels.MemberVM.MemberVM
@model List<DisplayProjectsVM>

<!DOCTYPE html>
<html>
<head>
	<title>Projects</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

	<style>
		.search-container {
			position: relative;
			display: inline-block;
		}

		.search-icon {
			position: absolute;
			left: 10px;
			top: 50%;
			transform: translateY(-50%);
			color: #666;
		}

		.form-control {
			padding-left: 35px;
			border: 1px solid #ccc;
			height: 40px;
			width: 300px;
		}

		.header-div {
			margin-top: 10px;
			margin-bottom: 20px;
		}

		.nav-links {
			border-bottom: 1px solid rgb(220, 220, 220);
		}

		.nav-links a {
			margin-right: 20px;
			color: #666;
			text-decoration: none;
		}

		.nav-links a.active {
			color: #007bff;
			border-bottom: 2px solid #007bff;
		}

		.button-group {
			margin-top: 20px;
			margin-bottom: 30px;
		}

		/* Table Styling */
		.table th {
			color: black;
			;
			font-weight: 500;
			border-bottom: 1px solid #dee2e6;
			text-align: center;
			vertical-align: middle;
			font-weight:bold;
		}

		.table td {
			text-align: center;
			vertical-align: middle;
			color: #333;
		}

		.platform-icon {
			color: #007bff;
			margin-right: 5px;
		}

		.table .action-column {
			text-align: right;
		}

		.table .action-column i {
			color: #666;
		}

		.table th,
		.table td {
			text-align: center;
			vertical-align: middle;
		}
		.action-column {
			text-align: center;
		}
	</style>
</head>
<body>
	<div class="d-flex">
		<div class="container-fluid p-4">
			<div class="header-div">
				<h2>Projects</h2>
			</div>

			<div class="nav-links mb-3">
				<a href="#" class="active">Active</a>
				<a href="#">Archived</a>
			</div>

			<!-- Buttons and Search -->
			<div class="d-flex justify-content-between button-group">
				<div>
					
					<button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#addProjectModal">+ Create Project</button>
					
					<!--
					<a asp-controller="Project" asp-action="AddProject" class="btn btn-primary me-2">+ Create Project</a>
					-->

					<i class="fas fa-info-circle" style="color: #666;"></i>
				</div>
				<div class="search-container">
					<i class="fa-solid fa-magnifying-glass search-icon"></i>
					<input type="text" class="form-control" placeholder=" Search">
				</div>
			</div>

			<!-- Table -->
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Name</th>
						<th>Number</th>
						<th>Project Type</th>
						<th>Project Value</th>
						<th>Start Date</th>
						<th>End Date</th>
						<th>Creation Date</th> <!-- Fixed typo -->
						<th class="action-column"><i class="fa-solid fa-gear"></i></th>
					</tr>
				</thead>
				<tbody>
					@if (Model == null || !Model.Any())
					{
						<tr>
							<td colspan="8">No projects found.</td>
						</tr>
					}
					else
					{
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Name</td>
								<td>@item.ProjectNumber</td>
								<td>@item.ProjectType</td>
								<td>@item.ProjectValue?.ToString("N2")</td>
								<td>@item.StartDate?.ToString("MM/dd/yyyy")</td>
								<td>@item.EndDate?.ToString("MM/dd/yyyy")</td>
								<td>@item.CreationDate?.ToString("MM/dd/yyyy")</td>
								<td>
									<i class="fa-regular fa-ellipsis-vertical"></i>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>



			
			<partial name="PartialViews/_AddProjectPartialView" model="new AddProjectVM()" />
			


			<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
