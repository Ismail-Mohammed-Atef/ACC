@using ACC.ViewModels.ProjectVMs
@using Helpers;

@model List<DisplayProjectsVM>
<!DOCTYPE html>
<html>
<head>
    <title>Projects</title>
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>

        .form-control {
            /* padding-left: 35px; */
            border: 1px solid #ccc;
            height: 40px;
            width: 300px;
        }

        .header-div {
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .nav-links {
            border-bottom: 1px solid rgb(220, 220, 220);
        }

            .nav-links a {
                margin-right: 20px;
                color: #666;
                text-decoration: none;
            }

                .nav-links a.active {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                }
        /* Table styling */
        .table-container {
            width: 100%;
            overflow-x: auto; /* Enable horizontal scrolling */
        }

        .table {
            width: 100%;
            min-width: 800px; /* Set a minimum width for the table */
            table-layout: auto; /* Allow columns to expand based on content */
            cursor: pointer;
            color: rgb(91, 115, 157);
        }

            .table th,
            .table td {
                white-space: nowrap; /* Prevent text wrapping */
                padding-left: 40px;
                padding-right: 40px;
                padding-top:12px;
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                color: #333;
                font-weight: bold;
            }

            .table tbody tr:hover {
                background-color: #f8f9fa;
            }

        /* Action column styling */
        .action-column {
            text-align: center;
        }

            .action-column .dropdown-toggle {
                background: none;
                border: none;
                color: #666;
                cursor: pointer;
            }

                .action-column .dropdown-toggle:hover {
                    color: #007bff;
                }

        .dropdown-menu {
            min-width: 120px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item {
            padding: 8px 12px;
            color: #333;
            text-decoration: none;
            display: block;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        .search-container {
            position: relative;
            display: inline-block;
            width: 300px;
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="container-fluid p-4">
            <div class="header-div">
                <h2>Projects</h2>
            </div>

            <div class="nav-links mb-3">
                <a href="#" class="active">Active</a>
                <a href="#">Archived</a>
            </div>

            <!-- Buttons and Search -->
            <div class="d-flex justify-content-between button-group">
                <div>
                    <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#addProjectModal">+ Create Project</button>
                    <i class="fas fa-info-circle" style="color: #666;"></i>
                </div>

                <form action="/Project/Index" method="get" style="display: flex;">
                    <input class="search-container" type="text" name="srchText" placeholder="Search" value="@Context.Request.Query["srchText"]" />
                    <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Search</button>
                </form>


            </div>

            <!-- Table Container -->
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="text-align:left;">Name</th>
                            <th style ="text-align:left;">Number</th>
                            <th style="text-align:left;">Project Type</th>
                            <th>Project Value</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Creation Date</th>
                            <th class="action-column">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="8">No projects found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:left;">@item.Name</td>
                                    <td style="text-align:left;">@item.ProjectNumber</td>
                                    <td style="text-align:left;">@EnumHelper.GetDescription(item.ProjectType)</td>
                                    <td>@item.ProjectValue?.ToString("N2")</td>
                                    <td>@item.StartDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@item.EndDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@item.CreationDate?.ToString("MM/dd/yyyy")</td>
                                    <td class="action-column">
                                        <div class="dropdown">
                                            <button class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i> <!-- Three dots icon -->
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="#">Delete</a></li>
                                                <li><a class="dropdown-item" href="#">Archive</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="pagination">
                @for (int i = 1; i <= ViewBag.totalPages; i++)
                {
                    <a href="@Url.Action("Index", new { page = i, srchText = Context.Request.Query["srchText"] })"
                       class="btn @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-light")">
                        @i
                    </a>
                }
            </div>

            <partial name="PartialViews/_AddProjectPartialView" model="new AddProjectVM()" />
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#addProjectForm").on("submit", function (e) {
                e.preventDefault(); // Prevent default form submission

                var formData = $(this).serialize(); // Serialize form data

                $.ajax({
                    url: "/Project/AddProject", // Match the controller action
                    type: "POST",
                    data: formData,
                    headers: {
                        "X-Requested-With": "XMLHttpRequest"
                    },
                    success: function (response) {
                        if (response.success) {
                            $("#addProjectModal").modal("hide");
                            window.location.href = "/Project/Index";
                        } else {
                            // Display errors if the submission fails
                            alert("Error: " + (response.errors || response.message || "Failed to create project").join(", "));
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("An error occurred: " + error);
                    }
                });
            });
        });
    </script>
</body>
</html>