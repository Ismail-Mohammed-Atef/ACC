@using ACC.ViewModels.ProjectVMs
@model AddProjectVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        /* General form styling */
        #addProjectForm {
            font-family: Arial, sans-serif;
            color: #333;
        }

        /* Modal header */
        .modal-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
        }

        /* Form labels */
        .form-label {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        /* Form inputs and textareas */
        .form-control, .form-select {
            border-radius: 4px;
            border: 1px solid #ced4da;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .form-control:focus, .form-select:focus {
                border-color: #80bdff;
                outline: 0;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        /* Required field indicator */
        mark {
            background-color: transparent;
            color: red;
            padding: 0;
        }

        /* Modal footer buttons */
        .modal-footer .btn {
            border-radius: 4px;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

            .btn-secondary:hover, .btn-primary:hover {
                opacity: 0.9;
            }
    </style>
</head>
<body>
    <h1>AddProject</h1>

    <!-- Button to trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProjectModal">
        Open Add Project Modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="addProjectModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProjectModalLabel">Add Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addProjectForm" method="post">
                        <!-- Project Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Project name <mark>*</mark></label>
                            <textarea class="form-control" asp-for="Name" rows="2" placeholder="Enter a project name"></textarea>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Project Number -->
                        <div class="mb-3">
                            <label asp-for="ProjectNumber" class="form-label">Project number <mark>*</mark></label>
                            <textarea class="form-control" asp-for="ProjectNumber" rows="2" placeholder="Enter a project number"></textarea>
                            <span asp-validation-for="ProjectNumber" class="text-danger"></span>
                        </div>

                        <!-- Project Type Dropdown -->
                        <div class="mb-3">
                            <label asp-for="ProjectType" class="form-label">Project type <mark>*</mark></label>
                            <select class="form-select" asp-for="ProjectType" asp-items="Model.ProjectTypes">
                                <option value="" selected>Select a project type</option>
                            </select>
                            <span asp-validation-for="ProjectType" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <textarea class="form-control" asp-for="Address" rows="2" placeholder="Enter a location"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Start Date -->
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">Start date <mark>*</mark></label>
                            <input type="date" class="form-control" asp-for="StartDate" placeholder="MM/DD/YYYY" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <!-- End Date -->
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">End date <mark>*</mark></label>
                            <input type="date" class="form-control" asp-for="EndDate" placeholder="MM/DD/YYYY" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <!-- Project Value -->
                        <div class="mb-3">
                            <label asp-for="ProjectValue" class="form-label">Project value</label>
                            <input type="number" class="form-control" asp-for="ProjectValue" placeholder="Enter project value" />
                            <span asp-validation-for="ProjectValue" class="text-danger"></span>
                        </div>

                        <!-- Currency Dropdown -->
                        <div class="mb-3">
                            <label asp-for="Currency" class="form-label">Currency</label>
                            <select class="form-select" asp-for="Currency" asp-items="Model.Currencies">
                                <option value="" selected>Select a currency</option>
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>

                        <!-- Modal Footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Create project</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (required for modal functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>