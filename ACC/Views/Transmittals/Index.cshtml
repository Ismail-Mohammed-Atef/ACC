@using ACC.ViewModels.TransmittalsVM
@model List<TransmittalVM>

<!DOCTYPE html>
<html>
<head>
    <title>Transmittals</title>
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/Transmittal.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .pagination .btn {
            margin: 0 2px;
        }

        .pagination .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .pagination .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-4">
        <h2>Transmittals</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">+ Create Transmittal</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Sent Date</th>
                    <th>Sender Company</th>
                    <th>Project</th>
                    <th>Recipients</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Status</td>
                        <td>@item.TransmittalId</td>
                        <td>@item.Title</td>
                        <td>@item.SentDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.SenderCompanyName</td>
                        <td>@item.ProjectName</td>
                        <td>@string.Join(", ", item.RecipientCompanyNames)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a href="/Transmittals/Index?page=@i" class="btn @(ViewBag.CurrentPage == i ? "btn-primary" : "btn-outline-primary")">@i</a>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
