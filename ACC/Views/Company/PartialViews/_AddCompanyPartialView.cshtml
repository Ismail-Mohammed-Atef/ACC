@using ACC.ViewModels
@using ACC.ViewModels.MemberVM
@using ACC.ViewModels.MemberVM.MemberVM
@model CompanyVM

<div class="modal fade" id="addCompanyModal" tabindex="-1" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCompanyModalLabel">Add Company</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="SaveNew" asp-controller="Company" method="post">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Enter name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" asp-for="Address" placeholder="Enter address" />
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" asp-for="Description" placeholder="Enter description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Country" class="form-label">Country</label>
                        <select class="form-control" asp-for="SelectedCountry" asp-items="@(new SelectList(Model.Countries))">
                            <option value="">-- Select Country --</option>
                        </select>
                        <span class="text-danger" asp-validation-for="SelectedCountry"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Website" class="form-label">Website</label>
                        <input type="text" class="form-control" asp-for="Website" placeholder="Enter website" />
                        <span class="text-danger" asp-validation-for="Website"></span>
                    </div>
                    <div class="mb-3">
                        <label for="PhoneNumber" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter phone number" />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="mb-3">
                        <label for="CompanyType" class="form-label">Trade</label>
                        <select class="form-control" asp-for="SelectedCompanyType" asp-items="@(new SelectList(Model.CompanyTypes))">
                            <option value="">-- Select Company Trade --</option>
                        </select>
                        <span class="text-danger" asp-validation-for="SelectedCompanyType"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
