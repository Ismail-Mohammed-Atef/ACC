@using ACC.ViewModels.WorkflowVM
@model List<WorkflowTemplateViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Workflow Templates</title>
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/Company.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        /* Custom CSS for loading indicator */
        #CompanyDetailsPanel.loading::after {
            content: "Loading...";
            display: block;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 1.2em;
            color: #007bff;
        }

        .selected {
            background-color: #f8d7da !important; /* Light red for selection */
        }


        /* Pagination styling */
        .pagination .btn {
            margin: 0 2px;
        }

        .pagination .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .pagination .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
        }

        .action-menu {
            min-width: 80px;
            max-width: 100px;
            padding: 8px;
            font-size: 14px;
            text-align: center;
            white-space: nowrap;
        }

        .company-row {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-4">
        
            <h2>Workflow Templates</h2>
           <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#stepModal">+ Create Workflow</button>

     

        <div class="d-flex justify-content-between my-3">

            <div class="d-flex">
                <input type="text" id="searchInput" class="form-control me-2" placeholder="Search by name">


            </div>
        </div>

        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Steps</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody id="WorkflowTemplatesTableBody">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@(item.Steps?.Count ?? 0)</td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Details", "Workflow", new { id = item.Id })" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="@Url.Action("Edit", "Workflow", new { id = item.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No workflow templates found.</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="modal fade" id="stepModal" tabindex="-1" aria-labelledby="stepModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="stepModalLabel">Enter Number of Steps</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="number" id="stepCountInput" class="form-control" placeholder="Number of steps" min="1" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="redirectToNewWorkflow()">Continue</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
<script>
    function redirectToNewWorkflow() {
        var stepCount = document.getElementById('stepCountInput').value;
        if (stepCount && parseInt(stepCount) > 0) {
            window.location.href = '/Workflow/NewWorkflow?stepCount=' + stepCount;
        } else {
            alert("Please enter a valid number of steps.");
        }
    }
</script>
