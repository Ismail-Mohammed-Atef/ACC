@model DataLayer.Models.Document
<div class="mb-3">
    <h4 class="text-primary fw-bold">
        <i class="bi bi-folder-fill me-2"></i>
        Folder: @Model.Folder.Name
    </h4>
    <hr />
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>File Name</th>
            <th>File Type</th>
            <th>Created Date</th>
            <th>Created By</th>
            <th>Versions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.FileType</td>
            <td>@Model.CreatedAt.ToString("yyyy-MM-dd")</td>
            <td>@Model.CreatedBy</td>
            <td>
                <div class="d-flex justify-content-between align-items-center">
                    <span>@(Model.Versions?.Count ?? 0)</span>

                    <div class="dropdown ms-2">
                        <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="versionDropdown-@Model.Id" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="versionDropdown-@Model.Id">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Versions", "ProjectDocument", new { documentId = Model.Id, projectId = ViewBag.ProjectId })">
                                    Show Versions
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>
