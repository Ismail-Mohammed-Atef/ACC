@model Folder

@{
    ViewData["Title"] = "Delete Folder";
    int projectId = ViewBag.ProjectId;
}

<h3>Are you sure you want to delete this folder?</h3>

<div>
    <h4>@Model.Name</h4>
    <p>This action cannot be undone.</p>

    <form asp-action="DeleteFolder" method="post">
        <input type="hidden" asp-for="Id" name="folderId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-id="@projectId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
