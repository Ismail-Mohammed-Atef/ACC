@{
    ViewBag.Title = "Create Root Folder";
    var projectId = ViewBag.ProjectId;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2>Create Root Folder</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="CreateRoot" method="post">
        <input type="hidden" name="projectId" value="@projectId" />
        <div class="mb-3">
            <label for="folderName" class="form-label">Folder Name</label>
            <input type="text" name="folderName" id="folderName" class="form-control" required />
            @if (ViewData.ModelState["FolderName"]?.Errors.Any() == true)
            {
                <div class="text-danger">@ViewData.ModelState["FolderName"].Errors.First().ErrorMessage</div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-route-projectId="@projectId" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>