@{
    ViewBag.Title = "Upload and View PDF";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



<div class="container mt-5">
    <h3>Upload PDF and View</h3>
    <form id="uploadForm" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <input type="file" name="file" accept=".pdf" class="form-control" required />
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </form>

    <div class="modal fade" id="pdfModal" tabindex="-1" aria-labelledby="pdfModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">PDF Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <iframe id="pdfViewer" width="100%" height="600px" style="border: none;"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const form = document.getElementById('uploadForm');
    const modal = new bootstrap.Modal(document.getElementById('pdfModal'));

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const res = await fetch('/Pdf/Upload', {
            method: 'POST',
            body: formData
        });

        const data = await res.json();

        if (res.ok && data.filename) {
            const viewer = document.getElementById('pdfViewer');
            viewer.src = `/pdfs/${data.filename}`;
            modal.show();
        } else {
            alert("Upload failed.");
        }
    });
</script>
