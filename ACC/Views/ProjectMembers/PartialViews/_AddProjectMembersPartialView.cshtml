@using ACC.ViewModels
@using ACC.ViewModels.MemberVM.MemberVM
@using ACC.ViewModels.ProjectMembersVM
@model InsertMemberVM
@{
    var members = new SelectList(ViewBag.Members);
    var PositionsList = new SelectList(ViewBag.PositionsList, "Id", "Name");
    var ProjectAccessLevelsList = new SelectList(ViewBag.ProAccessLevelsList, "Id", "Name");
    int ProjId = ViewBag.ProjId;
}
<div class="modal fade" id="addMemberModal" tabindex="-1" aria-labelledby="addMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMemberModalLabel">Add account members</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addMemberForm" method="post" asp-action="InsertMember" asp-controller="ProjectMembers" asp-route-ProjectId="@ProjId">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Member</label>
                        <select class="form-select" asp-for="Name" asp-items="members">
                            <option value="" disabled selected>Select Member</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProjectAccessLevelId" class="form-label">Access Level</label>
                        <select class="form-select" asp-for="ProjectAccessLevelId" asp-items="ProjectAccessLevelsList">
                            <option value="" disabled selected>Select Access Level</option>

                            <option value="" selected>No Access</option>
                        </select>
                    </div> <div class="mb-3">
                        <label asp-for="PositionId" class="form-label">Select Role</label>
                        <select class="form-select" asp-for="PositionId" asp-items="PositionsList">
                            <option value="" disabled selected>Select Role</option>

                            <option value="" selected>No Role</option>
                        </select>
                    </div>

                 

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


